<?xml version="1.0" encoding="utf-8" ?>
 
<component name="KeyboardScreen" extends="BaseScreen">
  <script type="text/brightscript" uri="KeyboardScreen.bs" />
  <interface>
    <field id="content" type="node" onChange="showContent" />
  </interface>
  <children>
    <Rectangle 
      id="background" 
      width="1920" 
      height="1080" />
    <LayoutGroup layoutDirection="horiz" horizAlignment="center" vertAlignment="center" translation="[960, 540]" itemSpacings="[25]">
      <DynamicMiniKeyboard id="keyboard" />
      <LayoutGroup layoutDirection="vert">
        <Label 
          id="searchResultsLabel"
          height="100"
          width="200"
          horizAlign="left"
          vertAlign="center"
          text="Pokemons"
          wrap="true" />
        <MarkupGrid 
          id="markupGrid"
          itemComponentName="KeyboardMarkupGridItem" 
          numColumns="4" 
          numRows="2" 
          itemSize="[ 250, 380 ]" 
          itemSpacing="[ 20, 40 ]" 
          drawFocusFeedback="false" />
      </LayoutGroup>
    </LayoutGroup>
  </children>
</component>
