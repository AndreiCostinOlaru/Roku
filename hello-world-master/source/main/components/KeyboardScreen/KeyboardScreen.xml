<?xml version="1.0" encoding="utf-8" ?>
 
<component name="KeyboardScreen" extends="BaseScreen">
  <script type="text/brightscript" uri="KeyboardScreen.bs" />
  <interface>
    <field id="content" type="node" onChange="showContent" />
  </interface>
  <children>
    <Rectangle 
      id="background" 
      width="1920" 
      height="1080" />
    <DynamicMiniKeyboard id="keyboard" translation="[100, 200]"/>
    <Label 
      id="searchResultsLabel"
      height="100"
      width="200"
      horizAlign="left"
      vertAlign="center"
      text="Pokemons"
      wrap="true"
      translation="[750, 50]" />
    <MarkupGrid 
      id="markupGrid"
      itemComponentName="KeyboardMarkupGridItem" 
      numColumns="4" 
      numRows="2" 
      itemSize="[ 250, 380 ]" 
      itemSpacing="[ 20, 40 ]" 
      drawFocusFeedback="false"
      translation="[750, 150]" />
  </children>
</component>
