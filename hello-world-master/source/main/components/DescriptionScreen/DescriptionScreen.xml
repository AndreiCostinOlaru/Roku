<?xml version="1.0" encoding="utf-8" ?>
 
<component name="DescriptionScreen" extends="BaseScreen">
  <script type="text/brightscript" uri="DescriptionScreen.bs"/>
  <interface>
    <field id="content" type="node" onChange="showContent"/>
  </interface>
  <children>
    <Poster 
      id="itemPoster" 
      width="1920" 
      height="1080" />
    <Label 
      id="description"
      height="500"
      width="1720"
      font="font:MediumBoldSystemFont"
      horizAlign="left"
      vertAlign="center"
      translation="[100,500]"
      wrap="true"/>
  </children>
</component>
