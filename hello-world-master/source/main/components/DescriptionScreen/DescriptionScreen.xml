<?xml version="1.0" encoding="utf-8" ?>
 
<component name="DescriptionScreen" extends="BaseScreen">
  <script type="text/brightscript" uri="DescriptionScreen.bs"/>
  <interface>
    <field id="content" type="node" onChange="showContent"/>
  </interface>
  <children>
    <Poster 
      id="itemPoster" 
      width="1920" 
      height="1080" />
    <Video 
      id="backgroundVideo" 
      width="1920" 
      height="1080"
      visible="false" />
    <Group translation="[100,500]">
      <Label 
        id="description"
        height="500"
        width="1620"
        font="font:MediumBoldSystemFont"
        horizAlign="left"
        vertAlign="center"
        wrap="true"/>
      <Poster 
        id="favoriteIcon"
        width="80"
        height="80"
        translation="[1640,210]"
        uri="pkg:/images/gray.png"
        scaleRotateCenter="[40,40]"/>
    </Group>
  </children>
</component>
