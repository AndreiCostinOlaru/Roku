<?xml version="1.0" encoding="utf-8" ?>

<component name="MainScreen" extends="Scene"> 
  <script type="text/brightscript" uri="mainscreen.brs"/>
  <script type="text/brightscript" uri="animationhelper.brs"/>
  <customization suspendhandler="onMainSceneSuspend" />
  <customization resumehandler="onMainSceneResume" />
	<children>
    <LayoutGroup id="layoutGroup" itemSpacings="[800]" vertAlignment="center" horizAlignment="center" translation="[980, 1000]">     
      <RowList 
        id="imageRowList" 
        itemComponentName="RowListItem"
        numRows="1"
        itemSize="[ 1920, 300 ]" 
        rowItemSize="[ [450, 240] ]" 
        rowItemSpacing="[ [40, 0]]" 
        rowFocusAnimationStyle="fixedFocusWrap"
        showRowLabel="[true]"
        rowLabelOffset="[[0, 20]]"
      />
      <LayoutGroup layoutDirection="horiz" itemSpacings="[20]">
        <Button
          id="button"
          text="ok"
          showFocusFootprint="true"
          minWidth="120" 
          height="120"
        />
        <Button
          id="buttonMarkupGridScreen"
          text="To MarkupGrid screen"
          showFocusFootprint="true"
          minWidth="120" 
          height="120"
        />
      </LayoutGroup>
    </LayoutGroup>
  </children>
</component>
